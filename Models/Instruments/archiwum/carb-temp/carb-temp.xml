<PropertyList>

  <path>carb-temp.ac</path>

  <animation>
    <object-name>Face</object-name>
    <object-name>Needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/DR400-dauphin/Models/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>vitre</object-name>
    <condition>
      <property>sim/model/config/glass-reflection-instruments</property>
    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>Needle</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt/enabled</property></not>
    </condition>
    <emission>
      <red>   0.07 </red>
      <green> 0.04 </green>
      <blue>  0.04 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights[1]</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Bezel.001</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt/enabled</property></not>
    </condition>
    <emission>
      <red>   0.015 </red>
      <green> 0.015 </green>
      <blue>  0.015 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights[1]</factor-prop>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>Needle</object-name>
    <property>engines/engine[0]/carb-temp-degc</property>
    <interpolation>
      <entry><ind> -30 </ind><dep> -64 </dep></entry> <!-- -30 deg C -->
      <entry><ind> -20 </ind><dep> -40 </dep></entry> <!-- -20 deg C -->
      <entry><ind> -10 </ind><dep> -22 </dep></entry> <!-- -10 deg C -->
      <entry><ind>   0 </ind><dep>   0 </dep></entry> <!--   0 deg C -->
      <entry><ind>  10 </ind><dep>  22 </dep></entry> <!--  10 deg C -->
      <entry><ind>  20 </ind><dep>  40 </dep></entry> <!--  20 deg C -->
      <entry><ind>  30 </ind><dep>  64 </dep></entry> <!--  30 deg C -->
    </interpolation>
    <center>
      <x-m> -0.002 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.005 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- TEXT OSG -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Carburator Temp</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.06</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>


