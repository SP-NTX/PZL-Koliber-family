<PropertyList>
  <path>cyl_head_temp.ac</path>

  <animation>
    <type>material</type>
    <object-name>wskazowka</object-name>
    <object-name>wskazowka-off</object-name>
    <object-name>tarcza</object-name>
    <emission>
      <red>0.8</red>
      <green>0.4</green>
      <blue>0.2</blue>
      <factor-prop>/systems/electrical/outputs/panel-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>wskazowka</object-name>
    <condition>
      <property>systems/electrical/outputs/bus-dc</property>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>wskazowka-off</object-name>
    <condition>
      <not>
        <property>systems/electrical/outputs/bus-dc</property>
      </not>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>wskazowka</object-name>
    <!--   <property>engines/engine[0]/oil-temperature-degf</property> -->
    <property>engines/engine[0]/cht-degf</property>
    <interpolation>
      <entry>
        <ind></ind>
      </entry>
      <entry>
        <ind>0</ind>
        <dep>-60.00</dep>
      </entry>
      <entry>
        <ind>100</ind>
        <dep>-55.00</dep>
      </entry>
      <entry>
        <ind>200</ind>
        <dep>-39.00</dep>
      </entry>
      <entry>
        <ind>300</ind>
        <dep>-23.00</dep>
      </entry>
      <entry>
        <ind>400</ind>
        <dep>-8.00</dep>
      </entry>
      <entry>
        <ind>500</ind>
        <dep>8.00</dep>
      </entry>
      <entry>
        <ind>600</ind>
        <dep>24.00</dep>
      </entry>
      <entry>
        <ind>700</ind>
        <dep>40.00</dep>
      </entry>
      <entry>
        <ind>750</ind>
        <dep>45.00</dep>
      </entry>
      <entry>
        <ind>1000</ind>
        <dep>45.00</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>-0.00175</x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.00926 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
</PropertyList>